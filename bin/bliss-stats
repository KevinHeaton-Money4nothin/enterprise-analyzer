#!/usr/bin/env ruby
$LOAD_PATH << '../lib'
require_relative '../lib/bootstrap'
require_relative '../lib/onexit'
include Cmd
@args = ARGV
stats = LocalStats.new(arg('dir'), arg('commit'), arg('log'), arg('excluded_dirs'),
                       arg('repo_test_files'), arg('repo_test_dirs'),
                       arg('excluded_exts'),
                       arg('remove_open_source') == 'true')
stats.execute
